@require '~vuetify/src/stylus/settings/_colors'

$theme ?= {
    primary: #9c27b0,
    accent: #ce93d8,
    secondary: #424242,
    info: #0D47A1,
    warning: #ffb300,
    error: #B71C1C,
    success: #2E7D32
}

